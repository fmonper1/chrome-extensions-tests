{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Wikit",
  "description": "A more advanced hello world extension",
  "icons": {
    "128": "src/assets/icon128.png",
    "48": "src/assets/icon64.png",
    "16": "src/assets/icon16.png"
  },

  "background": {
    "page": "src/html/background.html",
    "persistent": false
  },

  "permissions": ["contextMenus", "tabs"]
}
